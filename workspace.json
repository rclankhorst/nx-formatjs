{
  "cli": {
    "defaultCollection": "@nrwl/react"
  },
  "defaultProject": "app",
  "generators": {
    "@nrwl/react": {
      "application": {
        "babel": true,
        "linter": "eslint",
        "style": "styled-components"
      },
      "component": {
        "style": "styled-components"
      },
      "library": {
        "linter": "eslint",
        "style": "styled-components"
      }
    }
  },
  "projects": {
    "app": {
      "projectType": "application",
      "root": "apps/app",
      "sourceRoot": "apps/app/src",
      "targets": {
        "build": {
          "configurations": {
            "production": {
              "budgets": [
                {
                  "maximumError": "5mb",
                  "maximumWarning": "2mb",
                  "type": "initial"
                }
              ],
              "extractCss": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "apps/app/src/environments/environment.ts",
                  "with": "apps/app/src/environments/environment.prod.ts"
                }
              ],
              "namedChunks": false,
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "vendorChunk": false
            }
          },
          "executor": "@nrwl/web:build",
          "options": {
            "assets": [
              "apps/app/src/favicon.ico",
              "apps/app/src/assets"
            ],
            "index": "apps/app/src/index.html",
            "main": "apps/app/src/main.tsx",
            "outputPath": "dist/apps/app",
            "polyfills": "apps/app/src/polyfills.ts",
            "scripts": [],
            "styles": [],
            "tsConfig": "apps/app/tsconfig.app.json",
            "webpackConfig": "@nrwl/react/plugins/webpack"
          },
          "outputs": [
            "{options.outputPath}"
          ]
        },
        "extract": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "command": "formatjs extract \"./apps/app/src/**/*.ts*\" --out-file \"./apps/app/locale/extracted/en.json\" --format lokalise"
          }
        },
        "ingest": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "command": "formatjs compile \"./apps/app/locale/{args.locale}.json\" --out-file \"./apps/app/src/locale/{args.locale}.json\" --format \"./tools/scripts/formatjs-compile.js\" --ast"
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/app/**/*.{ts,tsx,js,jsx}"
            ]
          }
        },
        "serve": {
          "configurations": {
            "production": {
              "buildTarget": "app:build:production"
            }
          },
          "executor": "@nrwl/web:dev-server",
          "options": {
            "buildTarget": "app:build"
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "apps/app/jest.config.js",
            "passWithNoTests": true
          },
          "outputs": [
            "coverage/apps/app"
          ]
        }
      }
    }
  },
  "version": 2
}
